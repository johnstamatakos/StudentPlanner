<!DOCTYPE html>
@using Microsoft.AspNet.Identity;
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OnCourse</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container-fluid mainContainer">
        <div class="col-sm-2" style="padding:0px; height:100vh;">
            <div class="mainNav">
                <div class="mainNavLogin">@Html.Partial("_LoginPartial")</div>
                <div class="mainNavLogo"></div>
                <ul class="menuList">
                    <li class="menuli">
                        <a title="Home" class="navItem" href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span></a>
                    </li>
                    <li class="menuli">
                        <a title="Profile" class="navItem" href="@Url.Action("Details", "Users", new { Id = User.Identity.GetUserId() })"><span class="glyphicon glyphicon-user"></span></a>
                    </li>
                    <li class="menuli">
                        <a title="About Us" class="navItem" href="@Url.Action("About", "Home")"><span class="glyphicon glyphicon-star"></span></a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-sm-10" style="padding:0px;">
            @RenderBody()
            <hr />
            <footer>
                <p style="text-align:center;">&copy; @DateTime.Now.Year - OnCourse</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
