@model IEnumerable<StudentPlanner.Models.Exam>

<div class="container-fluid itemView">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th class="itemListHeader">
                Exam
            </th>
            <th class="itemListHeader">
                Prepared
            </th>
            <th class="itemListHeader">
                User
            </th>
            <th class="itemListHeader">
                Course
            </th>
            <th></th>
        </tr>

        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="itemListItem">
                        @Html.DisplayFor(modelItem => item.ExamName)
                    </td>
                    <td class="itemListItem">
                        @Html.DisplayFor(modelItem => item.Prepared)
                    </td>
                    <td class="itemListItem">
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td class="itemListItem">
                        @Html.DisplayFor(modelItem => item.Cour.CourseName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }

    </table>
</div>